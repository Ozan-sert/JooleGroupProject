    }*@

    $(function () {
        $("#slider-range").slider({
            range: true,
            min: 0,
            max: 500,
            values: [75, 300],
            slide: function (event, ui) {
                $("#a").val(ui.values[0]);
                $("#b").val(ui.values[1]);
            }
        });
        $("#a").val($("#slider-range").slider("values", 0));
        $("#b").val($("#slider-range").slider("values", 1));
    });

