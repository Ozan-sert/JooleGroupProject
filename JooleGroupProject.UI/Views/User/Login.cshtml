@model JooleGroupProject.UI.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Background.cshtml";
}

@section Styles {
    <style>
        /* Custom CSS for this specific view */
        .icon {
            height: 25px;
            width: 25px;
            text-align: center;
            display: inline-block;
            margin-left: -30px;
        }

        .field-input {
            width: 50%;
            height: 25px;
            border-radius: 5%;
            outline: none;
            border: 1px solid white;
        }

        .field {
            text-align: center;
            border: none;
            height: 30px;
        }

        .login-button {
            margin-left: 35%;
            width: 8%;
            height: 25px;
            background-color: #357AB5;
            border: none;
            border-radius: 5%;
            color: white;
        }

            .login-button:active {
                border: 2px solid white;
            }

        .signup-link {
            text-decoration: none;
            margin-left: 80%;
            color: black;
        }

            .signup-link:active {
                color: white;
            }

        .error {
            width: 50%;
            margin-left: 25%;
            font-size: 16px;
            color: red;
        }
    </style>
}

<div class="container">
    @Html.ActionLink("Sign Up", "Signup", "User", new { area = "" }, new { @class = "signup-link" })

    <div style="width: 60%; margin: 0 20% 0 20%; text-align: center; margin-top: 10%">
        <img src="~/Content/Resources/joole-logo.png" style="width: 50%" />
        <p style="font-size: 18px">Building Product Selection Platform</p>
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <div class="field">
                @Html.TextBoxFor(m => m.UsernameOrEmail, new { @class = "field-input", placeholder = "Username or Email", type = "text" })
                <div class="icon">
                    <i class="fa-solid fa-user"></i>
                </div>
            </div>
            <br />
            <div class="field">
                @Html.PasswordFor(m => m.Password, new { @class = "field-input", placeholder = "Password" })
                <div class="icon">
                    <i class="fa-solid fa-key"></i>
                </div>
            </div>
            <br />
            <input class="login-button" type="submit" value="Log In" />
            <br />
            <div class="error">
                @Html.ValidationSummary()
            </div>
        }

        @if (ViewBag.LoginError)
        {
            <div class="error">
                @ViewBag.LoginMessage
            </div>
        }
    </div>
</div>


